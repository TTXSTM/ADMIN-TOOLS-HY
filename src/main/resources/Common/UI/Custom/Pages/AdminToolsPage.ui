$C = "../Common.ui";

$C.@PageOverlay {}

$C.@Container {
  Anchor: (Width: 900, Height: 560);

  Label #TitleLabel {
    Anchor: (Top: 30, Left: 30, Right: 30);
    Text: "Admin Tools";
    Style: (
      FontSize: 32,
      RenderBold: true,
      Alignment: Center,
      TextColor: #ffffff
    );
  }

  Label #SubtitleLabel {
    Anchor: (Top: 80, Left: 40, Right: 40);
    Text: "Configuration Panel";
    Style: (
      FontSize: 18,
      Alignment: Center,
      TextColor: #bfcdd5
    );
  }

  Label #BodyLabel {
    Anchor: (Top: 130, Left: 60, Right: 60);
    Text: "Custom UI loaded from the plugin asset pack.";
    Style: (
      FontSize: 16,
      TextColor: #96a9be,
      Alignment: Center
    );
  }

  Group #CommandPanel {
    Anchor: (Top: 190, Left: 40, Right: 40, Bottom: 40);
    LayoutMode: Top;
    Padding: (Top: 6);

    Label #CommandTextLabel {
      Text: "Command Text (optional)";
      Style: (
        FontSize: 14,
        TextColor: #bfcdd5
      );
      Anchor: (Bottom: 6);
    }

    $C.@TextField #CommandTextInput {
      Anchor: (Height: 38, Bottom: 12);
      PlaceholderText: "Type custom text for title or hologram";
    }

    Group #CommandButtonsRow {
      LayoutMode: Left;
      Anchor: (Height: 44, Bottom: 12);

      $C.@TextButton #HealButton {
        Anchor: (Width: 190, Right: 10);
        Text: "/heal";
      }

      $C.@TextButton #ShowTitleButton {
        Anchor: (Width: 220, Right: 10);
        Text: "/show title";
      }

      $C.@TextButton #ShowHologramButton {
        Anchor: (Width: 240);
        Text: "/show hologram";
      }
    }

    Group #CommandButtonsRow2 {
      LayoutMode: Left;
      Anchor: (Height: 44, Bottom: 12);

      $C.@SecondaryTextButton #OpenUiButton {
        Anchor: (Width: 190);
        Text: "/openui";
      }
    }

    Label #CommandHintLabel {
      Text: "Click a button to run the command.";
      Style: (
        FontSize: 13,
        TextColor: #7a9cc6
      );
    }
  }
}
